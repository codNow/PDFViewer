<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".view.SearchActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryDark"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_folders"
            android:textColor="@color/text_color3"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:textSize="18sp"
            android:fontFamily="@font/josefont"
            android:id="@+id/all_folder_text"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom_navigation"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:id="@+id/recyclerView"/>


            <LinearLayout
                android:id="@+id/all_file_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/all_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/all_file_folder" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_files"
                        android:fontFamily="@font/josefont"
                        android:textColor="@color/blue"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:id="@+id/file_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all_files_from_storage"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/josefont"
                        android:textSize="15sp"
                        android:textColor="@color/accent"/>
                </LinearLayout>

            </LinearLayout>
