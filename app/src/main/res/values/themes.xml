<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PDFViewer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryDark</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorSecondary">@color/Red_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="navDrawerTextStyleActive" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="navDrawerTextStyleDeActive" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="SideMenuAnimation">
        <!--<item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>-->
    </style>
    <style name="PopupOptionAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionButtonStyle">@style/MyActionButton</item>
    </style>

    <style name="MyActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:width">48dp</item>
        <item name="android:height">48dp</item>
    </style>
    <style name="ToolbarTitleTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/josefont</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="DialogBackground" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>